# HarvestPilot RaspServer Configuration

# Hardware Configuration
HARDWARE_PLATFORM=raspberry_pi
SIMULATE_HARDWARE=false

# Firebase Configuration
DEVICE_ID=raspserver-001
FIREBASE_CREDENTIALS_PATH=firebase-key.json
FIREBASE_DATABASE_URL=https://YOUR-PROJECT.firebaseio.com
FIREBASE_PROJECT_ID=your-project-id

# Automation Settings
AUTO_IRRIGATION_ENABLED=true
AUTO_LIGHTING_ENABLED=true
EMERGENCY_STOP_ON_WATER_LOW=true

# Sensor Configuration
SENSOR_READING_INTERVAL=5

# Irrigation Configuration
IRRIGATION_CYCLE_DURATION=30
PUMP_DEFAULT_SPEED=80
IRRIGATION_SCHEDULE=06:00,12:00,18:00

# Lighting Configuration
LIGHT_ON_TIME=06:00
LIGHT_OFF_TIME=22:00
LED_DEFAULT_INTENSITY=80

# Harvest Configuration
HARVEST_BELT_SPEED=50
HARVEST_BELT_TIMEOUT=60

# Environmental Thresholds
TEMP_MIN=65.0
TEMP_MAX=80.0
HUMIDITY_MIN=50.0
HUMIDITY_MAX=70.0
SOIL_MOISTURE_MIN=60.0
SOIL_MOISTURE_MAX=80.0

# Logging
LOG_LEVEL=INFO
DEBUG=false
